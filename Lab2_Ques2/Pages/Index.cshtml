@page
@model IndexModel
@{
    ViewData["Title"] = "Question 2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Palindrome Checker</title>
    <style>
        body {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            background-color: lightblue;
        }

        .content-container {
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label, input {
            display: block;
            margin-bottom: 10px;
            text-align: center;
            width: 100%;
        }

        input {
            max-width: 250px;
            border-radius: 15px;
            background-color: #f0f0f0;
        }

        #result {
            margin-top: 20px;
            font-weight: bold;
            padding: 10px;
            border: 2px solid black;
            background-color: #f0f0f0;
            border-radius: 10px;
            width: fit-content;
            max-width: 100%;
            word-wrap: break-word;
            display: none;
        }

        button {
            color: blue;
            border-radius: 15px;
            padding: 10px 20px;
            background-color: darkgray;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: lightgray;
                color: white;
            }
    </style>
</head>
<body>
    <div class="content-container">
        <h1>Palindrome Checker</h1>
        <label for="word">Enter a word:</label>
        <input type="text" id="word" placeholder="Word">
        <button onclick="checkPalindrome()">Check</button>
        <p id="result"></p>
    </div>

    <script>

        function checkPalindrome() {
            //user input
            const word = document.getElementById('word').value.trim();
            const resultElement = document.getElementById('result');

            //validation
            if (!word) {
                resultElement.textContent = "Please enter a word.";
                resultElement.style.display = "block"; 
                return;
            }

            //lower case
            const normalizedWord = word.toLowerCase();

            //reversing
            const reversedWord = normalizedWord.split('').reverse().join('');

            //checking
            if (normalizedWord === reversedWord) {
                resultElement.textContent = `The word "${word}" is a palindrome!`;
            } else {
                resultElement.textContent = `The word you've entered is not a palindrome!`;
            }

            resultElement.style.display = "block";
        }

    </script>
</body>
</html>

